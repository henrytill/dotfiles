# -*- mode: sh; -*-

xrdb -load $HOME/.Xresources

xset s 300 5

xss-lock -n /usr/libexec/xsecurelock/dimmer -l -- xsecurelock &

xsetroot -solid gray &

setxkbmap -option ctrl:nocaps &

lxterm -g 100x48+10+10 &

xclock -g +10-10 &

if ! pgrep -x "nm-applet" >/dev/null; then
    nm-applet &
fi

exec systemd-cat -t cwm cwm
