{
  "debug.console.fontFamily": "'PragmataPro Mono'",
  "debug.console.fontSize": 14,
  "debug.enableStatusBarColor": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.codeLensFontFamily": "'PragmataPro Mono'",
  "editor.codeLensFontSize": 14,
  "editor.fontFamily": "'PragmataPro Mono'",
  "editor.fontLigatures": false,
  "editor.fontSize": 14,
  "editor.formatOnSave": true,
  "editor.guides.indentation": false,
  "editor.inlayHints.enabled": "offUnlessPressed",
  "editor.inlayHints.fontFamily": "'PragmataPro Mono'",
  "editor.inlayHints.fontSize": 14,
  "editor.inlineSuggest.enabled": true,
  "editor.lineHeight": 1.2,
  "editor.minimap.enabled": false,
  "editor.rulers": [
    100
  ],
  "editor.bracketPairColorization.enabled": false,
  "editor.semanticTokenColorCustomizations": {
    "enabled": true,
    "rules": {
      "*.mutable": {
        "underline": false
      }
    }
  },
  "editor.stickyScroll.enabled": false,
  "editor.tokenColorCustomizations": {
    "[Visual Studio Light]": {
      "keywords": "#000000",
      "comments": "#2F4F4F",
      "textMateRules": [
        {
          "scope": [
            "constant.language.capital-identifier.ocaml",
            "constant.language.unit.ocaml",
            "keyword.ocaml",
            "keyword.operator.expression",
            "keyword.operator.logical.python",
            "keyword.operator.new",
            "keyword.other.ocaml",
            "keyword.other.rust",
            "keyword.other.fn.rust",
            "meta.preprocessor",
            "storage.modifier",
            "support.type.property-name.toml",
            "support.type.property-name.array.toml",
            "support.type.property-name.table.toml",
            "variable.language"
          ],
          "settings": {
            "foreground": "#000000"
          }
        },
        {
          "scope": [
            "storage.type.class.doxygen",
            "storage.type.class.jsdoc",
            "string.quoted.docstring.single.python",
            "string.quoted.docstring.multi.python"
          ],
          "settings": {
            "foreground": "#2F4F4F"
          }
        }
      ]
    }
  },
  "editor.unicodeHighlight.nonBasicASCII": false,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "extensions.ignoreRecommendations": true,
  "files.associations": {
    ".clang-tidy": "yaml"
  },
  "files.insertFinalNewline": true,
  "git.allowForcePush": true,
  "git.autofetch": true,
  "git.defaultBranchName": "master",
  "git.openRepositoryInParentFolders": "never",
  "git.suggestSmartCommit": false,
  "outline.collapseItems": "alwaysCollapse",
  "settingsSync.ignoredExtensions": [
    "github.copilot",
    "github.copilot-nightly",
    "github.copilot-chat"
  ],
  "task.allowAutomaticTasks": "on",
  "telemetry.telemetryLevel": "off",
  "terminal.external.linuxExec": "footclient",
  "terminal.integrated.allowChords": false,
  "window.menuBarVisibility": "toggle",
  "workbench.colorTheme": "Visual Studio Light",
  "workbench.sideBar.location": "right",
  // Extension settings
  "cmake.configureOnOpen": false,
  "cmake.showOptionsMovedNotification": false,
  "dotfiles.targetPath": "~/etc",
  "dotfiles.repository": "https://github.com/henrytill/dotfiles.git",
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "dune": false,
    "git-commit": false
  },
  "githubPullRequests.createOnPublishBranch": "never",
  "githubPullRequests.pullBranch": "never",
  "githubPullRequests.remotes": [
    "origin",
    "upstream",
    "github"
  ],
  "haskell.manageHLS": "GHCup",
  "mesonbuild.downloadLanguageServer": true,
  "yaml.format.singleQuote": true,
  // Language-specific editor.* settings
  "[c]": {
    "editor.rulers": [
      80,
      100
    ]
  },
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features",
    "editor.tabSize": 2
  },
  "[go]": {
    "editor.tabSize": 8
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features",
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.tabSize": 2
  },
  "[makefile]": {
    "editor.tabSize": 8
  },
  "[markdown]": {
    "editor.rulers": [
      80
    ],
    "editor.wordWrap": "off"
  },
  "[python]": {
    "editor.rulers": [
      80,
      100
    ],
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
  },
  // Other language-specific settings
  "python.terminal.activateEnvironment": false,
  "zig.initialSetupDone": true,
  "haskell.upgradeGHCup": false,
  "workbench.experimental.enableNewProfilesUI": true
}
