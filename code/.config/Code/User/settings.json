{
  "debug.console.fontFamily": "'PragmataPro Mono'",
  "debug.console.fontSize": 14,
  "debug.enableStatusBarColor": false,
  "editor.fontFamily": "'PragmataPro Mono'",
  "editor.fontSize": 14,
  "editor.fontLigatures": false,
  "editor.codeLensFontFamily": "'PragmataPro Mono'",
  "editor.codeLensFontSize": 14,
  "editor.inlayHints.enabled": "offUnlessPressed",
  "editor.inlayHints.fontSize": 14,
  "editor.lineHeight": 1.2,
  "editor.inlineSuggest.enabled": true,
  "editor.formatOnSave": true,
  "editor.rulers": [100],
  "editor.semanticTokenColorCustomizations": {
    "enabled": true,
    "rules": {
      "*.mutable": {
        "underline": false
      }
    }
  },
  "editor.unicodeHighlight.nonBasicASCII": false,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "files.insertFinalNewline": true,
  "window.menuBarVisibility": "toggle",
  "workbench.colorTheme": "GitHub Light Default",
  "workbench.sideBar.location": "right",
  "git.allowForcePush": true,
  "git.autofetch": true,
  "git.defaultBranchName": "master",
  "extensions.ignoreRecommendations": true,
  "telemetry.telemetryLevel": "off",
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "settingsSync.ignoredExtensions": [
    "github.copilot",
    "github.copilot-nightly",
    "mesonbuild.mesonbuild"
  ],
  "githubPullRequests.createOnPublishBranch": "never",
  "githubPullRequests.remotes": ["origin", "upstream", "github"],
  "dotfiles.targetPath": "~/etc",
  "dotfiles.repository": "https://github.com/henrytill/dotfiles.git",
  "files.associations": {
    ".clang-tidy": "yaml"
  },
  "[c]": {
    "editor.rulers": [80, 100],
    "editor.tabSize": 8
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[makefile]": {
    "editor.tabSize": 8
  },
  "[markdown]": {
    "editor.wordWrap": "off"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.rulers": [80, 100]
  }
}
